{
	"compilerOptions": {
		"types": [
			"node"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"target": "es2017",
		"lib": [
			"es2017"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": false,
		"outDir": "./dist"
	},
	"exclude": [
		"node_modules",
		"dist",
		"src/__tests__"
	]
}